<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/asset_recycler_item_height"
    android:layout_marginBottom="@dimen/asset_recycler_item_margin_bottom"
    android:background="@drawable/background_highlighted">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/recycler_imageview_width"
        android:layout_height="@dimen/asset_recycler_item_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:padding="@dimen/recycler_imageview_padding"
        android:layout_marginTop="@dimen/recycler_imageview_margins"
        android:layout_marginBottom="@dimen/recycler_imageview_margins"
        android:layout_marginStart="@dimen/recycler_imageview_margins"
        android:layout_marginEnd="@dimen/recycler_imageview_margin_end"
        android:contentDescription="@string/imageview_contentDescription"
        android:background="@drawable/background_imageview"
        android:src="@drawable/chair">
    </ImageView>

    <TextView
        android:id="@+id/fullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/icon"
        android:layout_alignParentTop="true"
        android:paddingTop="@dimen/textview_padding"
        android:paddingBottom="@dimen/textview_title_padding"
        android:text="@string/full_name"
        android:textSize="@dimen/textview_title_textSize" />

    <TextView
        android:id="@+id/department"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/icon"
        android:layout_alignParentBottom="true"
        android:paddingBottom="@dimen/textview_padding"
        android:text="@string/department"
        android:textSize="@dimen/textview_textSize"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"/>

</RelativeLayout>