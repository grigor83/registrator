<resources>

    <style name="MyToolbarStyle" parent="Widget.AppCompat.ActionBar">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/primary</item>
        <item name="popupTheme">@style/CustomPopup.Theme</item>
    </style>

    <!-- Custom toolbar popup style  -->
    <style name="CustomPopup.Theme" parent="Widget.AppCompat.PopupMenu">
        <item name="android:backgroundTint">@color/primary_variant</item>
    </style>

    <style name="CustomTabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/tabTextSize</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Custom TextviewLabel style  -->
    <style name="TextViewLabelStyle">
        <item name="android:layout_width">@dimen/textview_title_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_textview</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">@dimen/recycler_imageview_margins</item>
        <item name="android:paddingLeft">@dimen/textview_padding_side</item>
        <item name="android:paddingRight">@dimen/textview_padding_side</item>
        <item name="android:paddingTop">@dimen/textview_padding</item>
        <item name="android:paddingBottom">@dimen/textview_padding</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- Custom Textview style  -->
    <style name="TextViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/background_recycler_item</item>
        <item name="android:layout_margin">@dimen/recycler_imageview_margins</item>
        <item name="android:padding">@dimen/textview_padding</item>
    </style>

    <!-- Style for edit mode -->
    <style name="EditToolbar" parent="MyToolbarStyle">
        <item name="android:background">@color/secondary</item>
    </style>

    <style name="TextViewStyleInEditMode" parent="TextViewLabelStyle">
        <item name="android:background">@drawable/background_editable</item>
    </style>

    <!-- Custom Edittext style  -->
    <style name="EditTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/edittext_selector</item>
        <item name="android:layout_margin">@dimen/recycler_imageview_margins</item>
        <item name="android:padding">@dimen/edittext_padding</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:importantForAutofill">no</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="CancelSaveButton" parent="ThemeOverlay.AppCompat">
        <item name="android:layout_width">@dimen/btn_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/textview_padding</item>
        <item name="android:layout_marginEnd">@dimen/textview_padding</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/background_button</item>
    </style>

    <style name="ScrollbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/main_layout_padding</item>
    </style>

    <style name="ImageviewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/imageview_height</item>
        <item name="android:layout_margin">@dimen/recycler_imageview_padding</item>
        <item name="android:contentDescription">@string/imageview_contentDescription</item>
    </style>

    <style name="ImageviewStyleInRecycler">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:contentDescription">@string/imageview_contentDescription</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="IconContainer">
        <item name="android:layout_width">@dimen/recycler_imageview_width</item>
        <item name="android:layout_height">@dimen/recycler_imageview_width</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginTop">@dimen/recycler_imageview_margins</item>
        <item name="android:layout_marginBottom">@dimen/recycler_imageview_margins</item>
        <item name="android:layout_marginStart">@dimen/recycler_imageview_margins</item>
        <item name="android:layout_marginEnd">@dimen/recycler_imageview_margin_end</item>
        <item name="android:padding">@dimen/recycler_imageview_padding</item>
        <item name="android:background">@drawable/background_imageview</item>
    </style>

    <style name="FragmentContainerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/imageview_height</item>
        <item name="android:layout_margin">@dimen/recycler_imageview_padding</item>
        <item name="android:padding">@dimen/recycler_imageview_padding</item>
        <item name="android:background">@drawable/background_recycler_item</item>
    </style>

</resources>