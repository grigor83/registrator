
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_focused="true">
    <shape>
        <solid android:color="@android:color/white" /> <!-- Background color -->
        <stroke android:width="@dimen/stroke_width" android:color="@color/secondary" />
        <corners android:radius="@dimen/drawable_border_radius" />
    </shape>
</item>

<!-- Default state -->
<item>
    <shape>
        <solid android:color="@android:color/white" /> <!-- Background color -->
        <stroke android:width="@dimen/stroke_width" android:color="#FFBDBDBD" />
        <corners android:radius="@dimen/drawable_border_radius" />
    </shape>
</item>
</selector>
